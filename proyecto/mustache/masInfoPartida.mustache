<div class="masInfoPartida" hide>
    {{#infoPartida}}
    <h1>Partida {{id_partida}}</h1>
    {{^sinImagenes}}
    <div id="imagenesPartida" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                {{# indicadores}}
                <button
                    type="button"
                    data-bs-target="#imagenesPartida"
                    data-bs-slide-to="{{num}}"
                    aria-label="Imagen {{num}}"
                    {{# activo}}class="active" aria-current="true"{{/activo}}
                ></button>
                {{/indicadores}}
            </div>
            <div class="carousel-inner">
                {{# imagenes}}
                    <div class="carousel-item {{# activo}}active{{/activo}}">
                        <div class="tarjeta masInfoTarjeta">
                            <img
                                src="{{imagen}}"
                                alt="Foto partidas organizadas"
                            />
                        </div>
                    </div>
                {{/imagenes}}
            </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#imagenesPartida" data-bs-slide="prev"  {{^indicadores}}hidden{{/indicadores}}>
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#imagenesPartida" data-bs-slide="next" {{^indicadores}}hidden{{/indicadores}}>
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
    </div>
  {{/sinImagenes}}
    <p>Fecha: {{fecha | date_format : "d-m-Y"}}</p>
    <p>Duracion: {{duracion}} minutos</p>
    <p>Juego: {{juego}}</p>
    <p>Genero: {{genero}}</p>
    <p>Plazas: {{plazas}}</p>
    <p>Hora inicio: {{hora_inicio | date_format: 'H:i'}}</p>
  {{/infoPartida}}
